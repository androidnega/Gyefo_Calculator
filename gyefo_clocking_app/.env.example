# Environment Variables for Gyefo Clocking App
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control

# ===========================================
# FIREBASE CONFIGURATION
# ===========================================
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_MESSAGING_SENDER_ID=your-messaging-sender-id
FIREBASE_STORAGE_BUCKET=your-storage-bucket
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com

# Firebase API Keys (separate for each platform)
FIREBASE_API_KEY_WEB=your-web-api-key
FIREBASE_API_KEY_ANDROID=your-android-api-key
FIREBASE_API_KEY_IOS=your-ios-api-key

# Firebase App IDs
FIREBASE_APP_ID_WEB=your-web-app-id
FIREBASE_APP_ID_ANDROID=your-android-app-id
FIREBASE_APP_ID_IOS=your-ios-app-id

# ===========================================
# THIRD-PARTY API KEYS
# ===========================================
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
PUSH_NOTIFICATION_KEY=your-push-notification-server-key

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DATABASE_URL=your-database-connection-string

# ===========================================
# ENVIRONMENT SETTINGS
# ===========================================
ENVIRONMENT=development  # development, staging, production
DEBUG_MODE=true
LOGGING_LEVEL=info

# ===========================================
# SECURITY SETTINGS
# ===========================================
ENCRYPTION_KEY=your-encryption-key
JWT_SECRET=your-jwt-secret
SESSION_TIMEOUT=600  # in seconds

# ===========================================
# FEATURE FLAGS
# ===========================================
ENABLE_ANALYTICS=false
ENABLE_CRASHLYTICS=false
ENABLE_PERFORMANCE_MONITORING=false
